{
    "name": "mibo/laravel-prices",
    "type": "library",
    "description": "PHP lib for prices for Laravel",
    "keywords": [
        "PHP",
        "Properties",
        "Property",
        "Prices",
        "Price",
        "Calculation",
        "Math",
        "Mathematics",
        "Mathematical",
        "Currencies",
        "Currency",
        "Value",
        "VAT",
        "Tax",
        "Exchange",
        "Exchanging",
        "Laravel",
        "Eloquent",
        "Casting",
        "Database",
        "DB",
        "Model"
    ],
    "authors": [
        {
            "name": "Michal Boris",
            "email": "michal.boris27@gmail.com"
        },
        {
            "name": "6I012"
        },
        {
            "name": "9I214"
        },
        {
            "name": "3I666"
        },
        {
            "name": "0I000"
        }
    ],
    "autoload": {
        "psr-4": {
            "MiBo\\Prices\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MiBo\\Prices\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.1",
        "mibo/properties": "^1.1.2",
        "mibo/currencies": "^1.0",
        "mibo/vat": "^1.0",
        "mibo/prices": "^1.0",
        "illuminate/support": "^10.16",
        "illuminate/collections": "^10.16",
        "illuminate/database": "^10.16",
        "mibo/prices-combinations": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.1",
        "phpunit/php-invoker": "^4.0",
        "phpstan/phpstan": "^1.5",
        "squizlabs/php_codesniffer": "^3.6",
        "phpstan/phpstan-strict-rules": "^1.5",
        "jetbrains/phpstorm-attributes": "^1.0",
        "laravel/framework": "^10.16",
        "nunomaduro/collision": "^7.8",
        "mockery/mockery": "^1.6",
        "mibo/currency-rates": "^1.0"
    },
    "suggest": {
        "mibo/currency-rates": "To convert prices to other currencies."
    },
    "config": {
        "platform-check": true,
        "lock": false,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": false
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "MiBo\\Prices\\Providers\\ConfigProvider",
                "MiBo\\Prices\\Providers\\FacadeProvider",
                "MiBo\\Prices\\Providers\\ServiceProvider",
                "MiBo\\Prices\\Providers\\TranslationProvider"
            ]
        }
    }
}
